<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <AssemblyName>CodeMonkeys.Navigation.Xamarin.Forms.Interfaces</AssemblyName>
    <RootNamespace>CodeMonkeys.Navigation.Xamarin.Forms.Interfaces</RootNamespace>
    <PackageId>CodeMonkeys.Navigation.Xamarin.Forms.Interfaces</PackageId>
    <Version>2.2.0</Version>
    <Authors>Jan Morfeld &amp; Daniel Belz</Authors>
    <Company>UltimateCodeMonkeys</Company>
    <Product>CodeMonkeysMVVM</Product>
    <Description>Package to use ViewModel navigation in Xamarin.Forms MVVM application</Description>
    <PackageTags>C#, xamarin, xamarin.forms, mvvm, navigation, viewmodelnavigation</PackageTags>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    
    <PackageOutputPath>$(SolutionDir).nuget-build/</PackageOutputPath>

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <DebugType>portable</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <AssemblyVersion>2.1.9.1</AssemblyVersion>
    <FileVersion>2.1.9.1</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Core\Core.csproj" />
    <ProjectReference Include="..\..\Navigation\Navigation.csproj" />
  </ItemGroup>

</Project>
