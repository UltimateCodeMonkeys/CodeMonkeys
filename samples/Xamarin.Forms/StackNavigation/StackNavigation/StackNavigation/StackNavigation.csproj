<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <ProduceReferenceAssembly>true</ProduceReferenceAssembly>
    <AssemblyName>CodeMonkeys.Samples.Xamarin.Forms.StackNavigation</AssemblyName>
    <RootNamespace>CodeMonkeys.Samples.Xamarin.Forms.StackNavigation</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>portable</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Xamarin.Forms" Version="4.5.0.495" />
    <PackageReference Include="Xamarin.Essentials" Version="1.5.3.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\..\..\src\Core\Core.csproj" />
    <ProjectReference Include="..\..\..\..\..\src\DependencyInjection\DependencyInjection.DryIoC\DependencyInjection.DryIoC.csproj" />
    <ProjectReference Include="..\..\..\..\..\src\DependencyInjection\DependencyInjection\DependencyInjection.csproj" />
    <ProjectReference Include="..\..\..\..\..\src\MVVM\MVVM.csproj" />
    <ProjectReference Include="..\..\..\..\..\src\Navigation\Navigation.Xamarin.Forms\Navigation.Xamarin.Forms.csproj" />
    <ProjectReference Include="..\..\..\..\..\src\Navigation\Navigation\Navigation.csproj" />
    <ProjectReference Include="..\..\..\..\MasterDetail\ViewModels\ViewModels.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Views\AboutPage.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <Compile Update="Views\ItemDetailsPage.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <Compile Update="Views\ItemsPage.xaml.cs">
      <DependentUpon>ItemsPage.xaml</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Views\ItemsPage.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
  </ItemGroup>
</Project>